{
  "name": "__MSG_wsLongName__",
  "short_name": "__MSG_wsShortName__",
  "version": "0.1.18.1",
  "version_name": "0.1.18-pre.1",
  "offline_enabled": true,
  "manifest_version": 2,
  "minimum_chrome_version": "54",
  "description": "Vertical view of all your windows and tabs, including saved tabs and windows.",
  "homepage_url": "https://cxw42.github.io/TabFern/",
  "icons": {
    "16": "assets/fern16.png",
    "48": "assets/fern48.png",
    "128": "assets/fern128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/common/common.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/settings/index.html",
  "browser_action": {
    "default_icon": {
      "16": "assets/fern16.png",
      "48": "assets/fern48.png",
      "128": "assets/fern128.png"
    },
    "default_title": "TabFern"
  },
  "permissions": [
    "file://*/*",
    "chrome://favicon/",
    "tabs",
    "storage",
    "unlimitedStorage",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "assets/*"
  ],
  "commands": {
    "reveal-view": {
      "description": "Open the TabFern window"
    }
  }
}
