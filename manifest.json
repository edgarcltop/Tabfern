{
  "name": "TabFern",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Basic outline view of your tabs, including saved tabs and windows.",
  "homepage_url": "http://extensionizr.com",
  "icons": {
    "16": "assets/fern16.png",
    "48": "assets/fern48.png",
    "128": "assets/fern128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/common/common.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "assets/icons/icon19.png",
    "default_title": "TabFern"
  },
  "permissions": [
    "chrome://favicon/",
    "notifications",
    "tabs",
    "storage",
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    "src/view/view.html",
    "assets/*"
  ]
}
